{
  "name": "@zbox/nodejs",
  "version": "0.1.2",
  "description": "Node.js binding for ZboxFS",
  "main": "lib/index.js",
  "author": "Bo Lu",
  "homepage": "https://github.com/zboxfs/zbox-nodejs",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zboxfs/zbox-nodejs.git"
  },
  "files": [
    "lib",
    "native/README.md"
  ],
  "binary": {
    "module_name": "index",
    "host": "https://github.com/zboxfs/zbox-nodejs/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  },
  "dependencies": {
    "@amilajack/node-pre-gyp": "github:amilajack/node-pre-gyp#neon-compat",
    "neon-cli": "^0.2.0",
    "node-pre-gyp-github": "^1.4.3"
  },
  "scripts": {
    "lint": "eslint ./lib",
    "build": "neon build --release",
    "test": "./node_modules/mocha/bin/mocha",
    "watch": "./node_modules/nodemon/bin/nodemon.js -w native -e rs -w lib -w test -e js -x 'neon build && ./node_modules/mocha/bin/mocha'",
    "install": "node-pre-gyp install --fallback-to-build=false || neon build --release",
    "package": "node-pre-gyp package",
    "upload-binary": "node-pre-gyp package && node-pre-gyp-github publish"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "eslint": "^5.14.1",
    "eslint-config-bliss": "^3.3.0"
  },
  "eslintConfig": {
    "extends": "bliss"
  }
}
